        {name}
      </Typography>
      <Typography variant="body1" className="restaurant-cuisine">
        Cuisine: {cuisine}
      </Typography>
      <Button variant="contained" color="primary" className="order-button">
        Order Now
      </Button>
    </div>
      </div>
  );
}

